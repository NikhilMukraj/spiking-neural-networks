[neuron]
    type: BasicIntegrateAndFire
    vars: e = 0, v_reset = -75, v_th = -55
    on_spike: 
        v = v_reset
    spike_detection: v >= v_th
    on_iteration:
        dv/dt = (v - e) + i
[end]

[ion_channel]
    type: TestChannel
    vars: e = 0, g = 1
    on_iteration:
        current = g * (v - e)
[end]
